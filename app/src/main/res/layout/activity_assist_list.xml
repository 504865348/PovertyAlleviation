<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_assist_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlurGrey"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jayny.povertyalleviation.AssistListActivity">

    <LinearLayout style="@style/wrap_layout">
        <!-- 全圆角-->
        <LinearLayout
            android:id="@+id/policy_document"
            style="@style/single_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

            <TextView
                style="@style/titletext"
                android:text="政策文件"
                android:textSize="22dp"/>

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/wrap_layout"
        android:layout_marginTop="15dp">
        <!-- 全圆角-->
        <LinearLayout
            android:id="@+id/p_detail"
            style="@style/single_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_mylocation" />

            <TextView
                style="@style/titletext"
                android:text="帮扶对象信息"
                android:textSize="22dp"/>

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/wrap_layout"
        android:layout_marginTop="15dp">
        <!-- 全圆角-->
        <LinearLayout
            android:id="@+id/assist_set"
            style="@style/single_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_send" />

            <TextView
                style="@style/titletext"
                android:text="帮扶要求"
                android:textSize="22dp"/>

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/wrap_layout"
        android:layout_marginTop="15dp">
        <!-- 全圆角-->
        <LinearLayout
            android:id="@+id/p_need"
            style="@style/single_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_agenda" />

            <TextView
                style="@style/titletext"
                android:text="帮扶对象需求反馈"
                android:textSize="22dp"/>

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/wrap_layout"
        android:layout_marginTop="15dp">
        <!-- 全圆角-->
        <LinearLayout
            android:id="@+id/p_suggest"
            style="@style/single_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_set_as" />

            <TextView
                style="@style/titletext"
                android:text="意见建议"
                android:textSize="22dp"/>

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/wrap_layout"
        android:id="@+id/p_fund_l"
        android:layout_marginTop="15dp">
        <!-- 全圆角-->
        <LinearLayout
            android:id="@+id/p_fund"
            style="@style/single_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_preferences" />

            <TextView
                style="@style/titletext"
                android:text="基金明细"
                android:textSize="22dp"/>

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
