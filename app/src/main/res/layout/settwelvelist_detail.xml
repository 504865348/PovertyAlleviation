<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlurGrey"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jayny.povertyalleviation.SetTwelveListDetailFragment">

    <LinearLayout style="@style/wrap_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="标题："
            android:textSize="15sp" />
        <!-- 全圆角-->
        <LinearLayout style="@style/single_layout">

            <EditText
                android:id="@+id/settwelvelist_tilte"
                android:layout_width="430dip"
                android:layout_height="20dip"
                android:background="@null"
                android:gravity="top"
                android:inputType="text"
                android:maxLength="500"
                android:hint="请按照(日期/事件)格式填写标题!"
                android:text="" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/wrap_layout"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:text="现场描述："
            android:textSize="18sp" />
        <!-- 全圆角-->
        <LinearLayout style="@style/single_layout">

            <EditText
                android:id="@+id/settwelvelist_detail"
                android:layout_width="430dip"
                android:layout_height="120dip"
                android:background="@null"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLength="500"
                android:text="" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/wrap_layout"
        android:layout_marginTop="20dp">
        <!-- 全圆角-->
        <LinearLayout style="@style/base_layout">

            <GridView
                android:id="@+id/gridView1"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"></GridView>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonFor12"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="上传信息"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@color/blurOrange"/>

<!--    <Button
        android:id="@+id/buttonForDis12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="取消上传"
        android:textSize="20sp" />-->

</LinearLayout>
