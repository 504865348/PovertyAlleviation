<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_assist_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img1"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="姓名："
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="生日："
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/homeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="住址："
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/aUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="帮扶支部："
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/p_detail"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/pkh_p_icon"
                />

            <TextView
                android:id="@+id/titleId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="left"
                android:text="家庭情况"
                android:textColor="@color/manager_txt_bg"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/arrow1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/assist_set"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/pkh_p_icon2"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="left"
                android:text="帮扶任务"
                android:textColor="@color/manager_txt_bg"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/arrow1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/policy_document"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/pkh_p_icon1"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="left"
                android:text="政策文件"
                android:textColor="@color/manager_txt_bg"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/arrow1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/new_info"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/pkh_p_icon1"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="left"
                android:text="扶贫动态"
                android:textColor="@color/manager_txt_bg"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/arrow1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/p_need"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/pkh_p_icon4"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="left"
                android:text="需求诉说"
                android:textColor="@color/manager_txt_bg"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/arrow1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/p_fund"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/pkh_p_icon4"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="left"
                android:text="基金明细"
                android:textColor="@color/manager_txt_bg"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/arrow1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/p_suggest"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/pkh_p_icon4"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="left"
                android:text="意见建议"
                android:textColor="@color/manager_txt_bg"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/arrow1"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>